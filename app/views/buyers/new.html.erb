<h1> Buyer Sign Up Form </h1>

<% if @buyer.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@buyer.errors.count, "error") %> prohibited this buyer from being saved:</h2>

  <ul>
  <% @buyer.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>


<div class = "fields_with_errors">
    <%= form_for (@buyer) do |f| %>
      <%= f.label :first_name %> </br>
      <%= f.text_field :first_name %> </br><br>
    
      <%= f.label :last_name, "Last Name"%> </br>
      <%= f.text_field :last_name %> </br><br>
    
      <%= f.label :email, "What is your email?"%></br>
      <%= f.email_field :email %> </br><br>
    
      <%= f.label :phone_number, "What is your phone number?"%></br>
      <%= f.text_field :phone_number %> </br><br>
      
      <%= f.label :password %> </br>
      <%= f.password_field :password %> </br><br>
    
      <%= f.submit "Buyer Sign In" %>
    <% end %>
</div>